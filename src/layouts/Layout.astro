---
import { getOracionesSubcategorias, getLegalPages } from '../lib/api';
import '../styles/global.css';

interface Props {
  title: string;
}

const { title } = Astro.props;

// Obtener solo las subcategorías de Oraciones cristianas
const subcategorias = await getOracionesSubcategorias();

// Obtener páginas legales para el footer
const legalPages = await getLegalPages();
---

<!DOCTYPE html>
<html lang="es" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <title>{title}</title>
  </head>
  <body class="bg-cream text-dark-500 font-body antialiased">
    <header class="sticky top-0 z-10 bg-white/90 backdrop-blur-md shadow-sm border-b border-primary-200">
      <div class="max-w-7xl mx-auto px-4 py-4 flex justify-between items-center">
        <a href="/" class="flex items-center gap-2">
          <img 
            src="/logo-oraciones-cristianas.svg" 
            alt="Oraciones Cristianas" 
            class="h-12 w-auto"
          />
        </a>
        <nav class="hidden md:flex items-center space-x-8">
          <a href="/" class="text-dark-500 hover:text-primary-500 font-medium transition-colors text-sm uppercase tracking-wider">Inicio</a>
          
          {/* Mostrar solo subcategorías de Oraciones cristianas */}
          {subcategorias.slice(0, 4).map(category => (
            <a 
              href={`/category/${category.slug}`} 
              class="text-dark-500 hover:text-primary-500 font-medium transition-colors text-sm uppercase tracking-wider"
            >
              {category.name}
            </a>
          ))}
          
          <a href="/blog" class="text-dark-500 hover:text-primary-500 font-medium transition-colors text-sm uppercase tracking-wider">Blog</a>
<a href="/about" class="text-dark-500 hover:text-primary-500 font-medium transition-colors text-sm uppercase tracking-wider">Acerca de</a>
          <a href="/contact" class="text-dark-500 hover:text-primary-500 font-medium transition-colors text-sm uppercase tracking-wider">Contacto</a>
          <a href="/search" class="p-2 text-dark-500 hover:text-primary-500 transition-colors">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
            </svg>
          </a>
        </nav>
        <button class="md:hidden p-2 rounded-md text-dark-500 hover:bg-primary-100">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </header>

    <div class="max-w-7xl mx-auto px-4 py-10">
      <slot />
    </div>

    <footer class="mt-20 bg-dark-500 text-white">
      <div class="max-w-7xl mx-auto px-4 py-16">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-12">
          <div>
            <h3 class="text-2xl font-heading font-medium mb-6 text-primary-400">Oraciones Cristianas</h3>
            <p class="text-gray-300 mb-6 font-light">Un espacio dedicado a la oración y meditación para fortalecer tu fe y acercarte a Dios en cada momento de tu vida.</p>
            <div class="flex space-x-4">
              <a href="#" class="text-primary-400 hover:text-primary-300 transition-colors">
                <span class="sr-only">Twitter</span>
                <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M8.29 20.251c7.547 0 11.675-6.253 11.675-11.675 0-.178 0-.355-.012-.53A8.348 8.348 0 0022 5.92a8.19 8.19 0 01-2.357.646 4.118 4.118 0 001.804-2.27 8.224 8.224 0 01-2.605.996 4.107 4.107 0 00-6.993 3.743 11.65 11.65 0 01-8.457-4.287 4.106 4.106 0 001.27 5.477A4.072 4.072 0 012.8 9.713v.052a4.105 4.105 0 003.292 4.022 4.095 4.095 0 01-1.853.07 4.108 4.108 0 003.834 2.85A8.233 8.233 0 012 18.407a11.616 11.616 0 006.29 1.84"/>
                </svg>
              </a>
              <a href="#" class="text-primary-400 hover:text-primary-300 transition-colors">
                <span class="sr-only">Facebook</span>
                <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
                  <path fill-rule="evenodd" d="M22 12c0-5.523-4.477-10-10-10S2 6.477 2 12c0 4.991 3.657 9.128 8.438 9.878v-6.987h-2.54V12h2.54V9.797c0-2.506 1.492-3.89 3.777-3.89 1.094 0 2.238.195 2.238.195v2.46h-1.26c-1.243 0-1.63.771-1.63 1.562V12h2.773l-.443 2.89h-2.33v6.988C18.343 21.128 22 16.991 22 12z" clip-rule="evenodd" />
                </svg>
              </a>
            </div>
          </div>
          <div>
            <h3 class="text-xl font-heading mb-6 text-primary-400">Enlaces</h3>
            <ul class="space-y-3">
              <li><a href="/" class="text-gray-300 hover:text-primary-400 transition-colors">Inicio</a></li>
              <li><a href="/about" class="text-gray-300 hover:text-primary-400 transition-colors">Acerca de</a></li>
              <li><a href="/contact" class="text-gray-300 hover:text-primary-400 transition-colors">Contacto</a></li>
              {/* Enlaces a páginas legales */}
              {legalPages.map(page => (
                <li>
                  <a 
                    href={`/legal/${page.slug}`} 
                    class="text-gray-300 hover:text-primary-400 transition-colors"
                  >
                    {page.title.rendered.replace(/&[^;]+;/g, ' ')}
                  </a>
                </li>
              ))}
            </ul>
          </div>
          <div>
            <h3 class="text-xl font-heading mb-6 text-primary-400">Suscríbete</h3>
            <p class="text-gray-300 mb-6">Recibe oraciones diarias y reflexiones en tu bandeja de entrada.</p>
            <form class="flex flex-col space-y-3" action="/api/subscribe" method="POST">
              <input type="email" name="email" placeholder="Tu email" required 
                class="px-4 py-3 bg-dark-600 border border-dark-400 rounded-md text-white focus:outline-none focus:ring-1 focus:ring-primary-400 focus:border-primary-400" />
              <button type="submit" class="bg-primary-600 hover:bg-primary-500 text-white px-4 py-3 rounded-md transition-colors font-medium uppercase tracking-wide text-sm">
                Suscribir
              </button>
            </form>
          </div>
        </div>
        <div class="border-t border-dark-400 mt-12 pt-6 text-center text-gray-400">
          <p>&copy; {new Date().getFullYear()} Oraciones Cristianas. Todos los derechos reservados.</p>
        </div>
      </div>
    </footer>
  </body>
</html>
